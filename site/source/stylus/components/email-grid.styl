.email-grid
  text-align center
  font-size 0

  img
    height auto

    .email-grid--two-col &
      max-width 280px

    .email-grid--three-col &
      max-width 180px

.email-grid__item
  width 100%
  display inline-block
  vertical-align top

  .email-grid--two-col &
    max-width 300px
    +width-max(400px)
      max-width 100% !important

  .email-grid--three-col &
    max-width 200px
    +width-min(401px)
      max-width 33% !important
    +width-max(400px)
      max-width 100% !important

.contents
  text-align center
  width 100%
  font-size 14px



